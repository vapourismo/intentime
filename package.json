{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "focus-bar",
  "title": "Focus Bar",
  "description": "A focus timer in your menu bar",
  "icon": "icon.png",
  "author": "ole",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "focus-bar",
      "title": "Focus Bar",
